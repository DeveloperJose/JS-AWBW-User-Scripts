{
  "name": "js-awbw-user-scripts",
  "version": "1.0.0",
  "description": "My custom user scripts for Advance Wars by Web written in JS",
  "private": true,
  "type": "module",
  "sideEffects": "*/*.css",
  "scripts": {
    "build:dev": "rollup -c --configInputDir music_player --configPlugin @rollup/plugin-typescript && npm run prettier",
    "build:all": "rollup -c --configPlugin @rollup/plugin-typescript && npm run prettier && npm run lint",
    "netlify": "cd ../JS-Website && npm run netlify",
    "netlify:dev": "cd ../JS-Website && netlify deploy --dir=./public",
    "prettier": "prettier --write \"**/*.{js,ts,css}\"",
    "clean": "rm dist/*.js",
    "lint": "eslint",
    "depcheck": "depcheck",
    "knip": "knip"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DeveloperJose/JS-AWBW-User-Scripts.git"
  },
  "author": "DeveloperJose",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DeveloperJose/JS-AWBW-User-Scripts/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/can-autoplay": "^3.0.5",
    "@types/node": "^22.10.10",
    "@types/spark-md5": "^3.0.5",
    "can-autoplay": "^3.0.2",
    "depcheck": "^1.4.7",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "globals": "^15.13.0",
    "knip": "^5.43.3",
    "node": "^18.20.6",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "rollup": "^4.29.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-external-globals": "^0.13.0",
    "rollup-plugin-ignore": "^1.0.10",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-userscript-metablock": "^0.4.2",
    "spark-md5": "^3.0.2",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.0"
  }
}
